<div class="container mt-5">
    <div class="row">
        <div class="col-md-7 me-3">
            <img class="img-fluid" src="{{ article.urlToImage }}" alt="article-picture">
            <a class="text-decoration-none" href="{{article.url}}">
                Click to see website
                {{#if article.content }}
                <p class="lead mt-4">{{ article.content }}</p>
                {{else}}
                <p class="lead">Article doesn't have a description</p>
                {{/if}}
            </a>
        </div>
        <div class="col-md 5">
            <h2 class="Display-5">{{ article.title }}</h2>
            <span class="">Author: {{ article.author }}</span>
            <br>
            <span>Date: {{ article.publishedAt }}</span>     
        </div>
    </div>
</div>